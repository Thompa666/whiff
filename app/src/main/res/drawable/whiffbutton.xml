<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b8d2ff" />
            <gradient android:angle="-90" android:startColor="#93a8cc" android:endColor="#a5bde5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a5bde5" />
            <solid android:color="#b8d2ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="#b8d2ff" />
            <gradient android:angle="-90" android:startColor="#bfd6ff" android:endColor="#a5bde5" />
        </shape>
    </item>
</selector>