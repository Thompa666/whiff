<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sim.whiff"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.sim.whiff.UI.HomePage.HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.sim.whiff.UI.HomePage.WEPCrack"
            android:label="@string/title_activity_wepcrack"
            android:theme="@style/AppTheme" />
        <activity
            android:name="edu.sim.whiff.UI.PacketFile.PacketFilePage"
            android:label="@string/title_activity_packetfile_page"
            android:parentActivityName="edu.sim.whiff.UI.HomePage.HomePage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="edu.sim.whiff.UI.PacketFileContent.PacketFileContentPage"
            android:label="@string/title_activity_packetfile_page"
            android:parentActivityName="edu.sim.whiff.UI.PacketFile.PacketFilePage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="edu.sim.whiff.UI.PacketDb.PacketDbPage"
            android:label="@string/title_activity_packetdb_page"
            android:parentActivityName="edu.sim.whiff.UI.HomePage.HomePage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="edu.sim.whiff.UI.PacketDbContent.PacketDbContentPage"
            android:label="@string/title_activity_packetdb_page"
            android:parentActivityName="edu.sim.whiff.UI.PacketDb.PacketDbPage"
            android:theme="@style/AppTheme" />

        <!-- Packet Capture (All) -->
        <service
            android:name="org.jnetpcap.PcapService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>
        <!-- Packet Capture (TCP/UDP) -->
        <service
            android:name="edu.sim.whiff.PacketCaptureService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>
        <service
            android:name="jp.co.taosoftware.android.packetcapture.PacketCaptureService"
            android:permission="android.permission.BIND_VPN_SERVICE" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>